{
  "expo": {
    "name": "Make a Meal AI",
    "slug": "make-a-meal-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "scheme": "makeamealai",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#007AFF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.makeamealai.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan ingredients from your fridge.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select ingredient photos.",
        "NSPhotoLibraryAddUsageDescription": "This app needs access to save photos to your library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#007AFF"
      },
      "package": "com.makeamealai.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Make a Meal AI to access your camera to scan ingredients."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Make a Meal AI to access your photos to select ingredient images."
        }
      ]
    ],
    "extra": {}
  }
}
